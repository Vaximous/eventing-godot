code = "shader_type spatial;
render_mode unshaded, blend_add, depth_draw_always, cull_back;

uniform float blob_radius : hint_range(0.05, 1.0) = 0.3;
uniform float edge_softness : hint_range(0.0, 1.0) = 0.3;

void vertex() {
    float r = length(VERTEX);
    if (r > 0.0) {
        VERTEX = normalize(VERTEX) * blob_radius;
    }
}

void fragment() {
    // Measure distance from center in object space
    float r = length(VERTEX) / blob_radius;

    // Soft radial falloff
    float alpha = 1.0 - smoothstep(1.0 - edge_softness, 1.0, r);

    // This “intensity” will add up (overlapping blobs => higher value)
    ALBEDO = vec3(alpha);
    ALPHA = alpha;
}
"

