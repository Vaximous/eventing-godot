code = "shader_type canvas_item;

uniform sampler2D goo_tex : source_color; // this will be the SubViewport texture
uniform vec4 goo_color : source_color = vec4(0.9, 0.9, 1.0, 1.0);
uniform float blur_radius = 1.5; // in pixels
uniform float thickness_scale = 1.5;

void fragment() {
    vec2 uv = UV;
    
    // Convert blur radius from pixels to UV
    vec2 tex_size = vec2(textureSize(goo_tex, 0));
    vec2 step = blur_radius / tex_size;

    // Simple 9-tap box blur on the alpha channel
    float sum = 0.0;
    vec2 offsets[9] = vec2[](
        vec2(-1.0, -1.0), vec2(0.0, -1.0), vec2(1.0, -1.0),
        vec2(-1.0,  0.0), vec2(0.0,  0.0), vec2(1.0,  0.0),
        vec2(-1.0,  1.0), vec2(0.0,  1.0), vec2(1.0,  1.0)
    );

    for (int i = 0; i < 9; i++) {
        sum += texture(goo_tex, uv + offsets[i] * step).a;
    }

    float thickness = sum / 9.0;
    thickness *= thickness_scale;

    // Threshold + smoothstep to get nice blobby shapes
    float edge = smoothstep(0.2, 0.6, thickness);

    // Final goo color, could add fake lighting based on edge, etc.
    vec3 color = goo_color.rgb;
    // Make center look “thicker” (slightly darker)
    color *= mix(1.0, 0.8, edge);

    COLOR.rgb = color;
    COLOR.a = clamp(edge, 0.0, 1.0);
}
"

